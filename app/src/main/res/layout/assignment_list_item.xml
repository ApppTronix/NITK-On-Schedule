<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/assignmentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="3"
                    android:textSize="18sp"
                    tools:text="Assignment 1" />

                <TextView
                    android:id="@+id/assignmentCourse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    tools:text="EE234" />

                <TextView
                    android:id="@+id/assignmentSubmission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:textAlignment="gravity"
                    android:textSize="20sp"
                    tools:text="JUN 21" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/assignmentDescription"
                    android:layout_width="298dp"
                    android:layout_weight="6"
                    android:paddingTop="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    tools:text="This is the first assingment in the first course of the the firt sirst" />

                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:background="#FFFFFF"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:arc_progress="55"
                    android:layout_gravity="center"
                    app:circle_finished_color="@android:color/darker_gray"
                    app:circle_unfinished_color="@android:color/darker_gray"
                    android:id="@+id/assignmentWeightage"
                    app:arc_bottom_text="WEIGHTAGE"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
